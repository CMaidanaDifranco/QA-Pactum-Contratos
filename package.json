{
  "name": "qa-pactum-contratos",
  "version": "1.0.0",
  "description": "Repositorio de pruebas de automatizaciÃ³n QA con Pactum.js",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/**/*.test.js --require tests/utils/setup.js --timeout 10000",
    "test:watch": "mocha tests/**/*.test.js --require tests/utils/setup.js --watch --timeout 10000",
    "test:auth": "mocha tests/auth/*.test.js --require tests/utils/setup.js --timeout 10000",
    "test:api": "mocha tests/api/*.test.js --require tests/utils/setup.js --timeout 10000",
    "test:smoke": "mocha tests/smoke/*.test.js --require tests/utils/setup.js --timeout 10000",
    "test:coverage": "nyc mocha tests/**/*.test.js --require tests/utils/setup.js --timeout 10000",
    "test:report": "mocha tests/**/*.test.js --require tests/utils/setup.js --reporter json > reports/test-results.json",
    "test:cucumber": "cucumber-js --config cucumber.js",
    "test:cucumber:auth": "cucumber-js tests/features/auth/*.feature --config cucumber.js",
    "test:cucumber:api": "cucumber-js tests/features/api/*.feature --config cucumber.js",
    "test:cucumber:smoke": "cucumber-js --tags @smoke --config cucumber.js",
    "test:cucumber:dev": "cucumber-js --config cucumber.js --profile development",
    "test:cucumber:ci": "cucumber-js --config cucumber.js --profile ci",
    "test:cucumber:auth-token": "cucumber-js tests/features/ --tags @auth-token --config cucumber.js",
    "test:cucumber:eligibility-flow": "cucumber-js tests/features/ --tags @eligibility-flow --config cucumber.js",
    "test:cucumber:simulation-flow": "cucumber-js tests/features/ --tags @simulation-flow --config cucumber.js",
    "test:cucumber:auth-to-eligibility": "cucumber-js tests/features/ --tags @auth-token --config cucumber.js && cucumber-js tests/features/ --tags @eligibility-flow --config cucumber.js",
    "test:cucumber:auth-to-simulation": "cucumber-js tests/features/ --tags @auth-token --config cucumber.js && cucumber-js tests/features/ --tags @simulation-flow --config cucumber.js"
  },
  "keywords": [
    "qa",
    "automation",
    "testing",
    "pactum",
    "api-testing"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/html-formatter": "^22.0.0",
    "chai": "^4.3.7",
    "cucumber": "^6.0.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "pactum": "^3.2.2"
  }
}
